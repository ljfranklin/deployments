### Desktop background
output * bg /etc/lightdm/background.png fill

### Idle configuration
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.
exec swayidle -w \
         timeout 300 ~/.config/sway/sway-lock.sh \
         timeout 600 ~/.config/sway/sway-display-off.sh resume ~/.config/sway/sway-display-on.sh \
         before-sleep ~/.config/sway/sway-lock.sh &> /tmp/swayidle.log

# Manually lock screen
exec light-locker --display="$DISPLAY"
bindsym $mod+grave exec $lock


